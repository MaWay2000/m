{
  "manifest_version": 2,
  "name": "codex-autorun",
  "version": "1.0.2",
  "description": "The codex-autorun WebExtension with background script and popup.",
  "browser_action": {
    "default_title": "codex-autorun",
    "default_popup": "src/popup.html",
    "default_area": "navbar"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  }
}
